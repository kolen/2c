//Предопределенная процедура - вызывается при первом открытии формы
Процедура ПриОткрытии()
	Таблица.КоличествоСтрок(50);
	Таблица.КоличествоКолонок(11);
	Таблица.ШиринаКолонки(0,30);

	Мас=Форма.Параметр;
	//сохранение произвольных данных микроформы вместе с файлом формы (в режиме конфигуратора)
	Если Разм(Мас)=0 Тогда
		Мас[1]["Наименование"]="Это строка";
		Мас[1]["Тип"]="Строка";
		Мас[1]["Значение"]="";
	
		Мас[2]["Наименование"]="Это событие";
		Мас[2]["Тип"]="Событие";
		Мас[2]["Значение"]="Событие1";
	
		Мас[3]["Наименование"]="Это цвет";
		Мас[3]["Тип"]="Цвет";
		Мас[3]["Значение"]=0;
	
		Мас[4]["Наименование"]="Это число";
		Мас[4]["Тип"]="Число";
		Мас[4]["Значение"]=12345;
	КонецЕсли
	//Сообщить(Мас[1]["Значение"])
КонецПроцедуры

