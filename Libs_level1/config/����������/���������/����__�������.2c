Функция ПроверитьФормат(ЗН,ФМТ,Надо)
	Что=Формат(ЗН,ФМТ);

	Если СокрЛП(Что)=СокрЛП(Надо) Тогда
		Рез=1;
		РезСтр=" ОК ";
	Иначе
		Рез=0;
		РезСтр=" Надо:"""+Надо+""" ->Неверно!";
	КонецЕсли
	Выррр=Выррр+ЗН+":"+ФМТ+"="+""""+Что+""""+РезСтр+симв(13)+симв(10)+симв(13)+симв(10);
	Возврат Рез;
КонецФункции

//___________________________________________________________________________________________
Функция ПроверитьШаблон(Шаб,Надо)
	Перем Мас;
	Мас[1]=1;
	Мас[2]=2;
	Мас[3]="Три";
	i=1;

	Что=Шаблон(шаб);

	Если Врег(СокрЛП(Что))=Врег(СокрЛП(Надо)) Тогда
		Рез=1;
		РезСтр=" ОК ";
	Иначе
		Рез=0;
		РезСтр=" Надо:"""+Надо+""" ->Неверно!";
	КонецЕсли
	Выррр=Выррр+":Шаблон "+Шаб+" = "+""""+Что+""""+РезСтр+симв(13)+симв(10)+симв(13)+симв(10);
	Возврат Рез;
КонецФункции



