///////////////////////////////////////////////////////////////////////
Процедура ВставитьВДерево(Мас,Родитель,Имя="")
	Если ТипЗначенияСтр(Мас)="Массив" Тогда
		Для А=1 По РазмерСтруктуры(Мас) Цикл
			ТекИмя=Мас.ИдентификаторПоНомеру(А);
			
			ИмяЭлемента=ТекИмя;
			Если ТипЗначенияСтр(Мас[ТекИмя])<>"Массив" Тогда
				ИмяЭлемента=ТекИмя+":"+Мас[ТекИмя];
			КонецЕсли
			ТекЭлемент=Дерево.ВставитьЭлемент(ИмяЭлемента,1,Родитель);
			ВставитьВДерево(Мас[ТекИмя],ТекЭлемент,ТекИмя);
		КонецЦикла;
	КонецЕсли
КонецПроцедуры



///////////////////////////////////////////////////////////////////////
//Предопределенная процедура - вызывается при первом открытии формы
Процедура ПриОткрытии()
	Корень=0;//Дерево.ВставитьЭлемент("Метаданные",1);
	Мета=СоздатьОбъект("Метаданные").Массив;
	ВставитьВДерево(Мета,Корень);
	Дерево.Разворот(Корень);
КонецПроцедуры

