Процедура Печать()
	Табл=СоздатьОбъект("Таблица");
	Табл.ИсходнаяТаблица("Таблица");
	
	ПечОрг				=Константа.НаименованиеОрганизации;
	ПечГрузополучатель	=Контрагент;
	ПечФирма			=ПечОрг;
	ПечКлиент			=ПечГрузополучатель;
	ПечДокОснование		=Основание;
	ФирмаОКПО			=Константа.ОКПО;
	КлиентОКПО			=Контрагент.ОКПО;
	НомерСтраницы		=1;
	СтрокаКоличествоЛистов=1;
	ПечЕдиница			="шт";
	ПечОКЕИ				="";

	
	Табл.ВывестиСекцию("Шапка");
	Табл.ВывестиСекцию("ЗаголовокТаб");
	Ном=0;
	ВыбратьСтроки();
	Пока ПолучитьСтроку()=1 Цикл
		Ном=Ном+1;
		ПечТовар=Товар;
		ПечКоличество		=Количество;
		ПечЦена				=Цена;
		СуммаБезНДС			=Сумма;
		ПечНДС				=0;
		СтавкаНДС			=18;
		СуммаСНДС			=Сумма;
		НаСумму				=Сумма;
		
		
		Табл.ВывестиСекцию("Строка");
		НаСумму=НаСумму+СуммаСНДС;
	КонецЦикла
	Табл.ВывестиСекцию("Подвал");
	
	
	Табл.Опции();
	Табл.Показать("Накладная "+ТекущийДокумент(),"Накладная",1);
КонецПроцедуры//Печать



