//#Задать ИмяФайлаБлокировки	КаталогИБ()+"enterprise.lck"
Перем блокФС;//блокФС:ФС
Перем ИмяФайлаБлокировки;
//******************************************************************************************
//Начальная инициализация модуля - процедура вызывается в режиме Конфигуратора и Предприятия
//******************************************************************************************
Процедура ИнициализацияМодуля()
	//Реализация монопольного режима работы
	Если РежимРаботы()="Предприятие" Тогда
		ИмяФайлаБлокировки=КаталогИБ()+"enterprise.lck";
		
		блокФС=СоздатьОбъект("ФС");
		блокФС.УдалитьФайл(ИмяФайлаБлокировки);//удаление, если возможно
		РазмерФайла=0;
		Если блокФС.СуществуетФайл(ИмяФайлаБлокировки) Тогда
			блокФС.АтрибутыФайла(ИмяФайлаБлокировки,РазмерФайла);
		КонецЕсли
		
		Попытка
		блокФС.ЗаписатьДанные(ИмяФайлаБлокировки,"#",РазмерФайла+100);//увеличиваем размер файла
		Исключение
		КонецПопытки

		Удача=0;
		Если МонопольныйРежим() Тогда
			Попытка
				блокФС.ЗаблокироватьФайл(ИмяФайлаБлокировки,0,РазмерФайла+1);//глобальная блокировка всего файла
				Удача=1;
			Исключение
			КонецПопытки
		Иначе
			Для А=1 По 30 Цикл
				Попытка
					блокФС.ЗаблокироватьФайл(ИмяФайлаБлокировки,0,1);//глобальная блокировка 0-го байта (проверка монопольного режима ранее запущенной системы)
					блокФС.РазблокироватьФайл(ИмяФайлаБлокировки,0,1);
					
					блокФС.ЗаблокироватьФайл(ИмяФайлаБлокировки,РазмерФайла+1,1);//блокировка одной позиции (текущая позиция данной задачи - для невозможности монопольного входа другой задачи)
					Удача=1;
					Прервать;
				Исключение
					Пауза(100);
				КонецПопытки
			КонецЦикла
		КонецЕсли
		
		Если НЕ Удача Тогда
			Предупреждение("Ошибка блокировки.
			|Возможно данные используются другой задачей.");
			ЗавершитьРаботуСистемы(-1);//аварийный выход
			Возврат;
		КонецЕсли
	ИначеЕсли РежимРаботы()="Конфигуратор" Тогда
		ИмяФайлаБлокировки=КаталогИБ()+"config.lck";
		
		блокФС=СоздатьОбъект("ФС");
		блокФС.УдалитьФайл(ИмяФайлаБлокировки);//удаление, если возможно
		Если блокФС.СуществуетФайл(ИмяФайлаБлокировки) Тогда
			Предупреждение("Ошибка блокировки.
			|Возможно уже запущена другая копия конфигуратора.");
			ЗавершитьРаботуСистемы(-1);//аварийный выход
			Возврат;
		КонецЕсли
		блокФС.ЗаписатьДанные(ИмяФайлаБлокировки,"#");
	КонецЕсли
КонецПроцедуры

