Перем мКонт, мЭлемент, мГруппа;

///////////////////////////////////////////////////////////////////////
//Предопределенная процедура - вызывается при первом открытии формы
Процедура ПриОткрытии()
	пМас = Форма.Параметр;
	Если ТипЗначенияСтр(пМас)<>"Массив" Тогда СтатусВозврата(0); Возврат; КонецЕсли
	
	мКонт = пМас.Контекст;	
	мЭлемент = пМас.Элемент;
	мГруппа = пМас.Группа;
	рдНаименованиеРус = пМас.НаименованиеРус;
	рдНаименованиеАнг = пМас.НаименованиеАнг;
	рдКонструкторРус = пМас.КонструкторРус;
	рдКонструкторАнг = пМас.КонструкторАнг;
	рдОписание = пМас.Описание;
КонецПроцедуры

///////////////////////////////////////////////////////////////////////
//Процедура обработки нажатия кнопки ОК
Процедура Кнопка_ОК()
	Если НЕ ((ПустаяСтрока(рдНаименованиеРус)=1) И (ПустаяСтрока(рдНаименованиеАнг)=1)) Тогда
		мКонт.Дерево.ВыделенныйЭлемент(мКонт.ВводЭлемента(мЭлемент,рдНаименованиеРус,рдНаименованиеАнг,рдКонструкторРус,рдКонструкторАнг,рдОписание,мГруппа));
	КонецЕсли
	Форма.Закрыть();
КонецПроцедуры

///////////////////////////////////////////////////////////////////////
//Процедура обработки нажатия кнопки Отмена
Процедура Кнопка_Отмена()
	Форма.Закрыть();
КонецПроцедуры
